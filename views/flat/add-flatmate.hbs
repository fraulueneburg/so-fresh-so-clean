<section>
    <a href="/flat/{{flat.id}}" class="link-back" aria-label="back to flat overview">
        <svg width="48" id="a" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16"><defs><style>.b{fill:none;stroke:currentColor;stroke-linecap:round;stroke-linejoin:round;stroke-width:2px;}</style></defs><path class="b" d="m15,8H1m0,0l7,7M1,8L8,1"/>
        </svg>
    </a>
    <h1>Add another flatmate</h1>
    <form action="/flat/{{flat.id}}/add-flatmate" method="post">

        <fieldset>
            <legend>Choose flatmates</legend>
            <div class="list-checkboxes">
                <ul>
                {{#each allUsers}}
                    <li>
                    <label for="check-{{_id}}">
                        <input type="checkbox" name="newFlatMate" value="{{_id}}" id="check-{{_id}}" />
                        <figure class="user" aria-hidden="true">
                        <img src="{{#if ImgUrl}}{{ImgUrl}}{{else}}/images/sad-kitten.jpg{{/if}}" alt="{{username}}â€™s profile picture" />
                        <figcaption class="name">{{username}}</figcaption>
                        </figure>
                    </label>
                    </li>
                {{/each}}
                </ul>
            </div>
        </fieldset>
        <button>Add flatmate</button>
    </form>
    {{#if error}}
        {{error}}
    {{/if}}
</section>